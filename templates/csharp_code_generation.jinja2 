// ======================================================
// âœ¨ Developer Experience Magic
// ======================================================

static void Success(string msg) => Console.WriteLine($"âœ… {msg}");
static void Warn(string msg) => Console.WriteLine($"âš ï¸ {msg}");
static void Progress(int current, int total, string msg) {
    var bar = new string('â–ˆ', current * 20 / total).PadRight(20, 'â–‘');
    Console.Write($"\rğŸš€ [{bar}] {current * 100 / total}% {msg}");
}

static async Task<T> RetryAsync<T>(Func<Task<T>> action, int retries = 3) {
    for (int i = 0; i < retries; i++) {
        try { return await action(); }
        catch when (i < retries - 1) { await Task.Delay(1000 * (i + 1)); }
    }
    return await action();
}

